<header class="main-header">

    <!-- Logo -->
    <a href="{{ settings.url }}" class="logo">{{ settings.siteName }}</a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <!-- Navbar Right Menu -->
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <!-- Messages: style can be found in dropdown.less-->
                <li class="dropdown messages-menu">
                    <a href="{{ path('mail_box') }}" class="dropdown-toggle">
                        <i class="fa fa-envelope-o"></i>
                        <span class="label label-success">{{ unread_messages }}</span>
                    </a>
                </li>
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="/assets/images/icons/user.jpg" class="user-image" alt="User Image" />
                        <span class="hidden-xs">
                             {{ account.name }}
                        </span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="/assets/images/icons/user.jpg" class="img-circle" alt="User Image" />
                            <p>
                                {{ account.name }}
                                <small>{{ account.email }}</small>
                            </p>
                        </li>

                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="{{ path("account") }}" class="btn btn-default btn-flat">Профил</a>
                            </div>
                            <div class="pull-right">
                                <a href="{{ path("account_logout") }}" class="btn btn-default btn-flat">Изход</a>
                            </div>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</header>