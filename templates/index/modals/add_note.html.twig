<div class="modal fade" id="addNote">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Добавяне на нова бележка</h4>
            </div>
            <div class="modal-body">
                <form method="post" class="note_form">
                    <div class="form-group">
                        <label>Заглавие</label>
                        <input type="text" class="form-control" name="title" />
                    </div>

                    <div class="form-group ">
                        <label>Съдържание</label>
                        <textarea class="form-control" name="content" rows="3"></textarea>
                    </div>


                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Затвори</button>
                <button type="button" class="btn btn-primary js-save-note">Добави</button>
            </div>


        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->