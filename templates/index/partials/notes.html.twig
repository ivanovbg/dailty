<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <i class="ion ion-calendar"></i>
                <h3 class="box-title">Моите бележки</h3>


                <button class="btn btn-default pull-right js-add-note"><i class="fa fa-plus"></i> Нова бележка</button>

            </div><!-- /.box-header -->
            <div class="box-body">
                <ul class="todo-list">

                    {% if not notes|length %}
                        <div class="callout callout-warning">
                            <h4>Нямате добавени бележки!</h4>
                        </div>
                    {% endif %}

                    {% for note in notes %}
                        <li class="item" data-id="{{ note.id }}">
                            <span class="text">{{ note.title }}</span>
                            <div class="tools">
                                <i class="fa fa-eye js-view-note" data-id="{{ note.id }}"></i>
                                <i class="fa fa-edit js-add-note" data-id="{{ note.id }}"></i>
                                <i class="fa fa-trash-o js-delete" data-url="/ajax/delete_note" data-type="ajax"></i>
                            </div>
                        </li>
                    {% endfor %}


                </ul>
            </div><!-- /.box-body -->
            <div class="box-footer clearfix no-border">
                <ul class="pagination pagination-sm no-margin pull-right">
                    {{ knp_pagination_render(notes) }}
                </ul>
            </div>

        </div>
    </div>
</div>
