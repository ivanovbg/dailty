<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">{% if is_reply %}Нов отговор{% else %}Ново съобщение{% endif %}</h3>
    </div>
    {{ form_start(form) }}
    <!-- /.box-header -->
    <div class="box-body">
        <div class="form-group">
          {{ form_widget(form.receiver) }}
            <span class="help-block">Може да изпращате съобщения единствено до своите колеги.</span>
        </div>
        <div class="form-group">
            {{ form_widget(form.subject) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.message) }}
        </div>
    </div>
    <!-- /.box-body -->
    <div class="box-footer">
        <div class="pull-right">
            {{ form_widget(form.submit) }}
        </div>
        <a href="{{ path('mail_box') }}" class="btn btn-default"><i class="fa fa-times"></i> Откажи</a>
    </div>
    {{ form_end(form) }}
    <!-- /.box-footer -->
</div>