{% extends "/layout/layout.html.twig" %}

{% block body %}
    <div class="row">
        <!-- profile information and companies -->
        <div class="col-md-6">
            <!-- profile information box -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Профилна информация</h3>
                </div>
                    <div class="box-body">
                        <div class="form-group">
                            <label>{% trans %}email{% endtrans %}:</label>
                            {{ account.email }}
                        </div>
                        <div class="form-group">
                            <label>{% trans %}name{% endtrans %}:</label>
                            {{ account.name }}
                        </div>

                        {% include 'account/partials/main_account.html.twig' %}
                    </div>
            </div>

            <!-- table with companies -->
            {% include "companies/partials/companies-table.html.twig" %}


        </div><!--/profile information and companies -->


        <!-- edit profile-->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Редактирай профила си</h3>
                </div><!-- /.box-header -->


                <!-- flash messages for form response -->
                {% include 'partials/more/flash_messages.html.twig' %}
                <!-- /end flash messages for form response -->


                <!---edit profile form -->
                {% include 'account/forms/edit_profile_form.html.twig' %}
                <!---/end profile form -->

            </div>
        </div>
    </div>
{% endblock %}